@using PYME_MVC.Models.ConfiguracionServicios
@using PYME_MVC.Models.InvocarServiciosGenerales
@using PYME_MVC.Models.Catalogos
@model PYME_MVC.Models.Busqueda.BuscarPersonas
@{
    <meta name="viewport" content="width=device-width" />
    ViewBag.Title = "Búsqueda";
    Layout = "~/Views/Shared/_Layout.cshtml";
    Dictionary<string, string> lstPersonas = new Dictionary<string, string>();
    lstPersonas.Add("Persona Moral", "M");
    lstPersonas.Add("Persona Físico", "F");
    lstPersonas.Add("Representante Legal", "RL");
    lstPersonas.Add("Avales", "AV");
    lstPersonas.Add("Todas", "none");
}
<section id="Cuerpo">
    <h2>Busqueda Cliente</h2>
    <div class="container">
        <fieldset>
            <legend></legend>
            <div id="alert_placeholder"></div>
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Realizar Consulta</h3>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-md-2">
                            @Html.LabelFor(m => m.tip_cliente)
                            @Html.DropDownListFor(m => m.tip_cliente, new SelectList(lstPersonas, "Value", "Key"), "Seleccionar", new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.tip_cliente)
                        </div>
                        <div class="col-md-10">
                            @Html.LabelFor(m => m.cadenabusqueda)
                            @Html.TextBoxFor(m => m.cadenabusqueda, new { @class = "form-control", placeholder = "Nombre / Razon Social / RFC" })
                            @Html.ValidationMessageFor(m => m.cadenabusqueda)
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-offset-1">
                            <br />
                            <input id="btnBuscar" type="button" value="Buscar información" class="btn btn-primary" />
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div id="grid"></div>
            </div>
        </fieldset>
    </div>
    <br />
</section>
