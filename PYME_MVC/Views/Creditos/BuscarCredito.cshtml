@using PYME_MVC.Models.ConfiguracionServicios
@using PYME_MVC.Models.InvocarServiciosGenerales
@using PYME_MVC.Models.Catalogos
@model PYME_MVC.Models.Entidad.Credito
@{
    <meta name="viewport" content="width=device-width" />
    ViewBag.Title = "Búsqueda";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ConfiguracionServicios _host = new ConfiguracionServicios();
    List<Object> lstEstatusCredito = new Dal().JsonList(_host.HostPyme + "Busqueda/ObtieneCatEstatusCredito/001/2");
    
}
<section id="Cuerpo">
    <h2>Búsqueda crédito</h2>
    <div class="container">
        <fieldset>
            <legend></legend>
            <div id="alert_placeholder"></div>
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Realizar Consulta</h3>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-md-2">
                            @Html.LabelFor(m => m.ind_estado)
                            @Html.DropDownListFor(x => x.ind_estado, new SelectList(lstEstatusCredito, "ind_estado", "des_estado"), "Todos", new { @class = "form-control" })
                        </div>
                        <div class="col-md-10">
                            @Html.Label("Criterio de búsqueda")
                            @Html.TextBoxFor(m => m.num_credito, new { @class = "form-control", placeholder = "No. Crédito/ Nombre Cliente/ RFC " })
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-offset-1">
                            <br />
                            <input id="btnBuscar" type="button" value="Buscar información" class="btn btn-primary" />
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div id="grid"></div>
            </div>
        </fieldset>
    </div>
</section>
