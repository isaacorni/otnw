<section id="Cuerpo">
    <h2>Crédito Simple Global</h2>
    <div class="container">
        <div id="alert_placeholder"></div>
        <fieldset>
            <legend></legend>
            <br />
            <div class="row">
                <div class="col-md-4">
                    <div class="panel panel-default">
                        <div class="panel-heading">
